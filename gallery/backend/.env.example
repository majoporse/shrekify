# PostgreSQL Configuration
# Default: postgresql://postgres:postgres@localhost:5432/gallery
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gallery

# AWS S3 / MinIO Configuration
# For local development with MinIO:
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_STORAGE_BUCKET_NAME=gallery
AWS_S3_ENDPOINT_URL=http://localhost:9000
AWS_S3_REGION_NAME=us-east-1
AWS_S3_USE_SSL=False

# For production AWS S3, use:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_USE_SSL=True
# (Remove AWS_S3_ENDPOINT_URL for real AWS)

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-gallery-api-key-change-in-production

# Optional: CloudFront CDN (production)
# AWS_S3_CUSTOM_DOMAIN=cdn.example.com
